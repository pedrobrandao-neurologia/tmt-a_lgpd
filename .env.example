# .env.example - Arquivo de configuração (COPIAR para .env e preencher com valores reais)
# NUNCA commitar o arquivo .env no git!

# ===========================================
# AMBIENTE
# ===========================================
NODE_ENV=development
PORT=3000

# ===========================================
# DOMÍNIOS PERMITIDOS (CORS)
# ===========================================
# Separar por vírgula para múltiplos domínios
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ===========================================
# CRIPTOGRAFIA
# ===========================================
# Gerar com: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_32_byte_encryption_key_in_hex_format_here_64chars
SALT_SECRET=your_salt_for_pseudonymization_here_64chars

# ===========================================
# BANCO DE DADOS POSTGRESQL
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tmt_data_db
DB_USER=db_user
DB_PASSWORD=sua_senha_segura_aqui
DB_SSL=false

# Conexão criptografada (produção)
# DB_SSL_CA=/path/to/ca-certificate.crt
# DB_SSL_CERT=/path/to/client-cert.pem
# DB_SSL_KEY=/path/to/client-key.pem

# ===========================================
# JWT PARA AUTENTICAÇÃO DE PESQUISADORES
# ===========================================
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# ===========================================
# RETENÇÃO DE DADOS (em dias)
# ===========================================
DATA_RETENTION_PERIOD=1825  # 5 anos para dados clínicos
LOG_RETENTION_PERIOD=2555   # 7 anos para logs de auditoria

# ===========================================
# EMAIL (para notificações)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@dominio.com
SMTP_PASSWORD=senha-de-app

# ===========================================
# BACKUP
# ===========================================
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=90
BACKUP_ENCRYPTION=true

# ===========================================
# MONITORAMENTO
# ===========================================
SENTRY_DSN=https://your-sentry-dsn-here
LOG_LEVEL=info

# ===========================================
# DPO (Data Protection Officer)
# ===========================================
DPO_NAME=Nome do Responsável
DPO_EMAIL=dpo@instituicao.edu.br
DPO_PHONE=+55 11 1234-5678
